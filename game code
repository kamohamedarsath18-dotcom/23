import pygame
import random
import sys

# Initialize pygame
pygame.init()

# Screen setup
WIDTH, HEIGHT = 600, 700
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Mini Battle Game")

# Colors
WHITE = (255, 255, 255)
RED = (255, 0, 0)
BLACK = (0, 0, 0)
BLUE = (0, 0, 255)

# Player settings
player_width = 50
player_height = 60
player_x = WIDTH // 2
player_y = HEIGHT - 80
player_speed = 7

# Bullet settings
bullets = []
bullet_speed = 10

# Enemy settings
enemy_width = 50
enemy_height = 50
enemies = []
enemy_speed = 5

score = 0
font = pygame.font.SysFont(None, 36)

clock = pygame.time.Clock()

def draw_player(x, y):
    pygame.draw.rect(screen, BLUE, (x, y, player_width, player_height))

def draw_enemy(x, y):
    pygame.draw.rect(screen, RED, (x, y, enemy_width, enemy_height))

def draw_bullet(x, y):
    pygame.draw.rect(screen, BLACK, (x, y, 5, 10))

running = True
while running:
    clock.tick(60)
    screen.fill(WHITE)

    # Events
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_SPACE:
                bullets.append([player_x + player_width//2, player_y])

    # Player movement
    keys = pygame.key.get_pressed()
    if keys[pygame.K_LEFT] and player_x > 0:
        player_x -= player_speed
    if keys[pygame.K_RIGHT] and player_x < WIDTH - player_width:
        player_x += player_speed

    # Spawn enemies
    if random.randint(1, 30) == 1:
        enemy_x = random.randint(0, WIDTH - enemy_width)
        enemies.append([enemy_x, 0])

    # Move bullets
    for bullet in bullets[:]:
        bullet[1] -= bullet_speed
        if bullet[1] < 0:
            bullets.remove(bullet)

    # Move enemies
    for enemy in enemies[:]:
        enemy[1] += enemy_speed
        if enemy[1] > HEIGHT:
            enemies.remove(enemy)

    # Collision detection
    for enemy in enemies[:]:
        for bullet in bullets[:]:
            if (bullet[0] > enemy[0] and bullet[0] < enemy[0] + enemy_width and
                bullet[1] > enemy[1] and bullet[1] < enemy[1] + enemy_height):
                enemies.remove(enemy)
                bullets.remove(bullet)
                score += 1
                break

    # Draw bullets
    for bullet in bullets:
        draw_bullet(bullet[0], bullet[1])

    # Draw enemies
    for enemy in enemies:
        draw_enemy(enemy[0], enemy[1])

    # Draw player
    draw_player(player_x, player_y)

    # Display score
    score_text = font.render(f"Score: {score}", True, BLACK)
    screen.blit(score_text, (10, 10))

    pygame.display.update()

pygame.quit()
sys.exit()
